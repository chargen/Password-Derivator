<PassGenScreen@Screen>:
    canvas.before:
        Color:
            rgba: 0.0625, 0.0625, 0.15625, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        spacing: 0.1*root.height
        BoxLayout:
            orientation: "horizontal"
            size: root.width, 0.08*root.height
            size_hint: None, None
            ToggleButton:
                id: PassGenButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "PassGen"
                font_size: 0.04*root.width
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'PassGen'
            ToggleButton:
                id: SetupButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Setup"
                font_size: 0.04*root.width
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Setup'
            ToggleButton:
                id: SettingsButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Settings"
                font_size: 0.04*root.width
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Settings'
            ToggleButton:
                id: ToolsButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Tools"
                font_size: 0.04*root.width
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Tools'
        BoxLayout:
            orientation: "vertical"
            padding: 0.1*root.width, 0
            TextInput:
                padding: self.width/20, self.height*0.15, self.width/20, 0
                id: website_name
                size: 0.8*root.width, 0.14*root.height
                size_hint: None, None
                hint_text: "Website or company name"
                font_size: 0.06*self.width
                multiline: False
                text_validate_unfocus: False
                on_text_validate: root.on_submit_website(website_name.text)
                write_tab: False
        BoxLayout:
            orientation: "vertical"
            padding: 0.3*root.width, 0
            Button:
                size: 0.4*root.width, 0.1*root.height
                size_hint: None, None
                text: "Generate password"
                font_size: 0.1*self.width
                background_normal: ''
                background_color: (0.25, 0.73, 0.95, 0.7)
                on_press: root.on_submit_website(website_name.text)
        BoxLayout:
            orientation: "horizontal"
            padding: 0.07*root.width, 0.1*root.height
            spacing: 0.01*root.width
            Label:
                id: new_password
                size: 0.73*root.width, 0.1*root.height
                size_hint: None, None
                text: "Your new password"
                font_size: 0.05*self.width
            Button:
                id: copy_new_password
                size: 0.13*root.width, 0.1*root.height
                size_hint: None, None
                text: "Copy"
                font_size: 0.3*self.width
                background_normal: ''
                background_color: (0.13, 0.31, 0.44, 0.7)
                on_press: 
                    root.on_clipboard_copy(new_password.text)
                
                
                
<SetupScreen@Screen>:
    canvas.before:
        Color:
            rgba: 0.15, 0.1, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        spacing: 0.1*root.height
        BoxLayout:
            orientation: "horizontal"
            size: root.width, 0.08*root.height
            size_hint: None, None
            ToggleButton:
                id: PassGenButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "PassGen"
                font_size: 0.04*root.width
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'PassGen'
            ToggleButton:
                id: SetupButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Setup"
                font_size: 0.04*root.width
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Setup'
            ToggleButton:
                id: SettingsButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Settings"
                font_size: 0.04*root.width
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Settings'
            ToggleButton:
                id: ToolsButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Tools"
                font_size: 0.04*root.width
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Tools'
        BoxLayout:
            orientation: "vertical"
            spacing: root.height * 0.03
            padding: 0.1*root.width, 0
            TextInput:
                id: master_password1
                size: 0.8*root.width, 0.12*root.height
                size_hint: None, None
                hint_text: "Enter your master password"
                font_size: 0.05*self.width
                padding: self.width/20, self.height*0.15, self.width/20, 0 
                allow_copy: False
                write_tab: False
                password: True
            TextInput:
                id: master_password2
                size: 0.8*root.width, 0.12*root.height
                size_hint: None, None
                hint_text: "Enter your master password again"
                font_size: 0.05*self.width
                padding: self.width/20, self.height*0.15, self.width/20, 0
                allow_copy: False
                write_tab: False
                password: True
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Enter your birthdate below"
                font_size: 0.05*self.width
            BoxLayout:
                orientation: "horizontal"
                spacing: root.width * 0.1
                padding: 0.1*root.width, 0
                Spinner:
                    id: day
                    text: "Day"
                    font_size: 0.2*self.width
                    values: [str(i) for i in range(31, 0, -1)]
                    size: 0.2*root.width, 0.09*root.height
                    size_hint: None, None
                Spinner:
                    id: month
                    text: "Month"
                    font_size: 0.2*self.width
                    values: [str(i) for i in range(12, 0, -1)]
                    size: 0.2*root.width, 0.09*root.height
                    size_hint: None, None
                Spinner:
                    id: year
                    text: "Year"
                    font_size: 0.2*self.width
                    values: [str(i) for i in range(2008, 1939, -1)]
                    size: 0.2*root.width, 0.09*root.height
                    size_hint: None, None
        BoxLayout:
            padding: 0.25*root.width, 0.07*root.height
            Button:
                size: 0.5*root.width, 0.1*root.height
                size_hint: None, None
                font_size: 0.07*self.width
                text: "Save Secured Digest"
                on_press: root.on_submit_credentials(master_password1.text, master_password2.text, day.text, month.text, year.text)      

        
        
