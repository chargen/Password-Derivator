<PassGenScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 0.1*root.height
        BoxLayout:
            orientation: "horizontal"
            size: root.width, 0.08*root.height
            size_hint: None, None
            ToggleButton:
                id: PassGenButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "PassGen"
                font_size: 20
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'PassGen'
            ToggleButton:
                id: SetupButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Setup"
                font_size: 20
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Setup'
            ToggleButton:
                id: SettingsButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Settings"
                font_size: 20
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Settings'
            ToggleButton:
                id: ToolsButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Tools"
                font_size: 20
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Tools'
        BoxLayout:
            orientation: "vertical"
            padding: 0.1*root.width, 0
            TextInput:
                padding: self.width/16, self.height/4
                id: website_name
                size: 0.8*root.width, 0.08*root.height
                size_hint: None, None
                hint_text: "Website or company name"
                font_size: 16
                multiline: False
                text_validate_unfocus: False
                on_text_validate: root.on_submit_website(website_name.text)
                write_tab: False
        BoxLayout:
            orientation: "vertical"
            padding: 0.3*root.width, 0
            Button:
                size: 0.4*root.width, 0.1*root.height
                size_hint: None, None
                text: "Generate password"
                font_size: 16
                on_press: root.on_submit_website(website_name.text)
        BoxLayout:
            orientation: "vertical"
            padding: 0.1*root.width, 0.1*root.height
            Label:
                id: new_password
                size: 0.8*root.width, 0.07*root.height
                size_hint: None, None
                text: "Your new password"
                font_size: 16
        BoxLayout:
                
                
                
<SetupScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 0.1*root.height
        BoxLayout:
            orientation: "horizontal"
            size: root.width, 0.08*root.height
            size_hint: None, None
            ToggleButton:
                id: PassGenButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "PassGen"
                font_size: 20
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'PassGen'
            ToggleButton:
                id: SetupButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Setup"
                font_size: 20
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Setup'
            ToggleButton:
                id: SettingsButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Settings"
                font_size: 20
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Settings'
            ToggleButton:
                id: ToolsButton
                size: 0.25*root.width, 0.08*root.height
                size_hint: None, None
                text: "Tools"
                font_size: 20
                group: "navigation"
                state: "normal"
                on_press: root.manager.current = 'Tools'
        BoxLayout:
            orientation: "vertical"
            spacing: root.height * 0.03
            padding: 0.1*root.width, 0
            TextInput:
                id: master_password1
                size: 0.8*root.width, 0.06*root.height
                size_hint: None, None
                hint_text: "Enter your master password"
                font_size: 16
                padding: self.width / 16, self.height / 4 
                allow_copy: False
                write_tab: False
                password: True
            TextInput:
                id: master_password2
                size: 0.8*root.width, 0.06*root.height
                size_hint: None, None
                hint_text: "Enter your master password again"
                font_size: 16
                padding: self.width / 16, self.height / 4
                allow_copy: False
                write_tab: False
                password: True
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Enter your birthdate below"
            BoxLayout:
                orientation: "horizontal"
                spacing: root.width * 0.1
                padding: 0.1*root.width
                Spinner:
                    id: day
                    text: "Day"
                    values: [str(i) for i in range(31, 0, -1)]
                    size: 0.2*root.width, 0.07*root.height
                    size_hint: None, None
                Spinner:
                    id: month
                    text: "Month"
                    values: [str(i) for i in range(12, 1, -1)]
                    size: 0.2*root.width, 0.07*root.height
                    size_hint: None, None
                Spinner:
                    id: year
                    text: "Year"
                    values: [str(i) for i in range(2017, 1940, -1)]
                    size: 0.2*root.width, 0.07*root.height
                    size_hint: None, None
        BoxLayout:
            padding: 0.25*root.width, 0.07*root.height
            Button:
                size: 0.5*root.width, 0.1*root.height
                size_hint: None, None
                font_size: 16
                text: "Save Secured Digest"
                on_press: root.on_submit_credentials(master_password1.text, master_password2.text, day.text, month.text, year.text)      

        
        
